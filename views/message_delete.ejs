<div class="max-w-lg min-w-sm mx-auto h-screen">
    <h1 class="text-2xl font-bold dark:text-teal-500 text-center mb-3 border-b pt-8 pb-4 border-b-teal-500/70 ">
        <%-title%>
    </h1>
    <form class="" method="POST" action="">                                 
        <h2 class="text-xl text-center text-green-500 dark:text-gray-200 ">
            Do you really want to delete the following message: 
        </h2>
        <div class="text-base justify-self-center flex justify-between m-4 p-4 row-span-4 col-span-2 border-2 rounded border-black dark:bg-slate-700 dark:border-slate-50/20 min-w-fit min-h-fit">
            <div class="form-group">
                <input type="text" id="messageid" class="form-control hidden" type='hidden' name='messageid' required='true' value=<%=message._id%>>
                <div id="card-body flex">
                    <h3 id="card-title" class="text-lg lg:text-2xl font-bold dark:text-gray-950"> <%=message.title%></h3>
                    <p id="card-text"class="text-base lg:text-lg"><%=message.message%></p>
                    <p id="posted-by" class="text-sm mt-6 align-botton">
                        posted by:
                        <span class="text-green-500 dark:text-teal-500"> <%=message.author[0].username%></span>,
                         on: <%= message.timestamp_formatted %>
                    </p>
                </div>
            </div>
            <% if (user && user.isAdmin === true) { %>
                <div class="align-bottom place-self-end min-w-fit">
                    <button type="submit" class="btn p-1.5 px-2 bg-red-700 dark:bg-purple-700 font-bold rounded-md text-black dark:text-gray-200 hover:bg-purple-700 focus:ring-2 focus:ring-gray-700 ">
                        Delete
                    </button>
                </div>
            <% } %>
        </div>
    </form>
</div>
